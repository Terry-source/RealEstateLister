<%- include('../partials/header') %>

  <style>
    .suburbs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      padding: 20px;
    }

    .suburb {
      padding: 10px;
      border-radius: 5px;
    }

    .suburb h2 {
      font-size: 20px;
      margin-bottom: 30px;
      text-align: center;
    }

    .properties-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 10px;

    }

    .property-thumbnail {
      width: 100%;
      height: auto;
      border-radius: 5px;
      overflow: hidden;
    }

    .property-thumbnail:hover {
      transform: scale(1.05);
    }

    .property-thumbnail img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    .property-info {
      padding: 10px;
      text-align: center;
      margin-bottom: 50px;
    }
  </style>

  <div class="suburbs-grid">
    <% suburbs.forEach(function(suburb){ %>
      <div class="suburb">
        <h2><a href="/suburbs/<%= suburb._id %>">
            <%= suburb.name %>
          </a></h2>
        <div class="properties-grid">
          <% suburb.properties.forEach(function(property){ %>
            <div class="property-thumbnail">
              <a href="/properties/<%= property._id %>">
                <img src="<%= property.imageUrl %>" alt="Property image">
              </a>
            </div>
            <div class="property-info">
              <a href="/properties/<%= property._id %>">
                <%= property.address %><br>
                  <small>
                    <%= suburb.name %>
                  </small>
              </a>
            </div>
            <% }); %>
        </div>
      </div>
      <% }); %>
  </div>

  <%- include('../partials/footer') %>
<%- include('../partials/header') %>

    <body>
        <main>
            <p>
                <%= suburb.info || 'No additional information available for this suburb.' %>
            </p>

            <h2>Properties in this Suburb</h2>
            <% if (suburb.properties && suburb.properties.length> 0) { %>
                <ul>
                    <% suburb.properties.forEach(function(property) { %>
                        <li>
                            <a href="/properties/<%= property._id %>">
                                <%= property.address %>
                            </a> - Rooms: <%= property.rooms %>, Bathrooms: <%= property.bathrooms %>
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                    <p>No properties listed in this suburb yet.</p>
                    <% } %>
        </main>

        <%- include('../partials/footer') %>
<%- include('../partials/header') %>

    <style>
        section {
            grid-column: 1 / -1;
            text-align: center;
        }

        body,
        html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #ccc;
        }

        form {
            display: grid;
            grid-gap: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: larger;
        }

        button {
            width: auto;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.2s;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>

    <main>
        <h1>Edit Property</h1>
        <form action="/properties/<%= property._id %>?_method=PUT" method="POST">
            <div>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= property.address %>" required>
            </div>

            <div>
                <label for="rooms">Rooms</label>
                <input type="number" id="rooms" name="rooms" value="<%= property.rooms %>" required>
            </div>

            <div>
                <label for="bathrooms">Bathrooms</label>
                <input type="number" id="bathrooms" name="bathrooms" value="<%= property.bathrooms %>" required>
            </div>

            <div>
                <label for="imageUrl">Image URL</label>
                <input type="text" id="imageUrl" name="imageUrl" value="<%= property.imageUrl %>" required>
            </div>

            <div>
                <label for="suburb">Suburb</label>
                <select id="suburb" name="suburb">
                    <% suburbs.forEach(function(suburb) { %>
                        <option value="<%= suburb._id %>" <%=suburb._id.toString()===property.suburb.toString()
                            ? 'selected' : '' %>><%= suburb.name %>
                        </option>
                        <% }); %>
                </select>
            </div>

            <button type="submit">Update Property</button>
        </form>
    </main>

    <%- include('../partials/footer') %>